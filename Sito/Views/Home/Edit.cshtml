@model Sito.Models.UtenteModificato

@{
    ViewBag.Title = "Modifica Dettagli";
}

<h2>Modifica</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()<div class="form-horizontal">
    <h4>Immetti i tuoi dati</h4>
    <hr />
    @switch ((string)Session["modifica"])
    {
        case "nome":
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            break;

        case "cognome":
            <div class="form-group">
                @Html.LabelFor(model => model.Cognome, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Cognome, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            break;

        case "email":
            <div class="form-group">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            break;

        case "indirizzo":
            <div class="form-group">
                @Html.LabelFor(model => model.Indirizzo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Indirizzo, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            break;

        case "nascita":
            <div class="form-group">
                @Html.LabelFor(model => model.Nascita, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Nascita, new { htmlAttributes = new { @class = "form-control", default_value = Model.Nascita.ToString("dd/MM/yyyy") } })
                </div>
            </div>
            break;

        case "portafoglio":
            <div class="form-group">
                @Html.LabelFor(model => model.Portafoglio, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Portafoglio, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            break;

        case "password":
            <div class="form-group">
                @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            break;
    }

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Login" formaction=@Url.Action("Edit") formmethod="post" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
